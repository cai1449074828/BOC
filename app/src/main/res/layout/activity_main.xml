<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/gps"/>
            <TextView
                android:id="@+id/textView_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="正在定位中..."
                android:textAlignment="center" android:textStyle="bold"/>
            <TextView
                android:id="@+id/textView_GPS"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="中国银行"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColorHint="#AAAAAA" android:textSize="18sp"/>
            <TextView
                android:id="@+id/textView_GPS_error"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="定位出错?'\n点这" android:textAlignment="center" android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入您的名字"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="吴超群"/>
        <Button
            android:id="@+id/openQrCodeScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dencode_qrcode"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textView_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:elevation="0dp"
        android:gravity="center"
        android:text="正在查询数据......"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:layout_weight="1"
        />
</LinearLayout>
